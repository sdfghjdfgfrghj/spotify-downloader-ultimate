<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽµ Spotify Downloader"
                style="@style/HeaderText"
                android:textSize="28sp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download your favorite music with ease"
                style="@style/SubtitleText"
                android:gravity="center" />

        </LinearLayout>

        <!-- Control Panel Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/ModernCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸŽ›ï¸ Control Panel"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/txtCurrentAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¤ No account"
                    android:textSize="12sp"
                    android:textColor="@color/text_accent"
                    android:background="@drawable/glass_background"
                    android:padding="6dp" />

            </LinearLayout>

            <!-- Primary Action Button -->
            <Button
                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸš€ START DOWNLOADER"
                style="@style/PrimaryButton"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <!-- Secondary Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btnSelectFolder"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="ðŸ“ Folder"
                    style="@style/SecondaryButton"
                    android:layout_marginEnd="3dp" />

                <Button
                    android:id="@+id/btnAccounts"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="ðŸ‘¤ Accounts"
                    style="@style/ModernButton"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp" />

                <Button
                    android:id="@+id/btnServerConfig"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="âš™ï¸ Server"
                    style="@style/ModernButton"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp" />

                <Button
                    android:id="@+id/btnExportLogs"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="ðŸ“„ Logs"
                    style="@style/SecondaryButton"
                    android:layout_marginStart="3dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/ModernCard">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/txtSelectedFolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Download folder: Default (App Files)"
                style="@style/StatusText"
                android:layout_marginBottom="12dp" />

            <ProgressBar
                android:id="@+id/progress"
                style="@style/GlassProgressBar"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:indeterminate="true"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Log Output Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/ModernCard"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“ Activity Log"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â— LIVE"
                    android:textSize="12sp"
                    android:textColor="@color/success_green"
                    android:textStyle="bold"
                    android:background="@drawable/status_background"
                    android:padding="6dp" />

            </LinearLayout>

            <ScrollView
                android:id="@+id/logScrollView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/glass_background"
                android:padding="12dp"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:overScrollMode="never">

                <TextView
                    android:id="@+id/txtLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:typeface="monospace"
                    android:textIsSelectable="true"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="2dp"
                    android:text="ðŸŽµ Welcome to Spotify Downloader!\nðŸ“± App initialized successfully\nâš¡ Ready to download music..." />

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
